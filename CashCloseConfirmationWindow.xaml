<Window x:Class="Playroom_Kiosk.CashCloseConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playroom_Kiosk"
        mc:Ignorable="d"
        Title="Cierre de Caja" SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <StackPanel>
            <Label>Vas a cerrar la caja. Se imprimirá un ticket con los datos del día.</Label>
            <Label>Introduce la contraseña de monitor para confirmar:</Label>
            <PasswordBox Height="30" Margin="0,0,0,10" x:Name="passwordTextBox"></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="40" Margin="5" Click="ButtonAccept_Click">Aceptar</Button>
                <Button Width="100" Height="40" Margin="5" Click="ButtonCancel_Click">Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
