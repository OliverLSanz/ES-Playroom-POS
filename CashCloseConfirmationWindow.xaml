<Window x:Class="Playroom_Kiosk.CashCloseConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playroom_Kiosk"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label>Vas a cerrar la caja. Se imprimirá un ticket con los datos del día.</Label>
            <Label>Introduce la contraseña de monitor para confirmar:</Label>
            <TextBox x:Name="passwordTextBox"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Click="ButtonAccept_Click">Aceptar</Button>
                <Button Click="ButtonCancel_Click">Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
