<Window x:Class="Playroom_Kiosk.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playroom_Kiosk"
        mc:Ignorable="d"
        Title="Contraseña de Administrador" SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <StackPanel>
            <Label>Introduce la contraseña de administrador para acceder:</Label>
            <PasswordBox Height="30" x:Name="passwordBox" ></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="40" Margin="5" Click="AcceptButton_Click">Aceptar</Button>
                <Button Width="100" Height="40" Margin="5" Click="CancelButton_Click">Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
