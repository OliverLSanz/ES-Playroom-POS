<Window x:Class="Playroom_Kiosk.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playroom_Kiosk"
        mc:Ignorable="d"
        Title="AdminPasswordWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Introduce la contraseña de administrador para acceder a la configuración:</Label>
            <TextBox x:Name="passwordTextBox"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Click="AcceptButton_Click">Aceptar</Button>
                <Button Click="CancelButton_Click">Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
